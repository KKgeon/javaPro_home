package javaPro;

import java.io.IOException;
import java.util.Scanner;

public class Sample4 {
//2. 30명의 학생의 이름,국,영,수,총,평,등수 처리하는 코딩을 하세요.

	public static void main(String[] args) throws IOException {

		String name;
		int kor, eng, mat, tot, rank;
		double avg;
		
		final int STUDENT_COUNT = 30;
		
		String [] names = new String[STUDENT_COUNT];
		int [] kors = new int [STUDENT_COUNT];
		int [] engs = new int [STUDENT_COUNT];
		int [] mats = new int [STUDENT_COUNT];
		int [] tots = new int [STUDENT_COUNT];
		int [] ranks = new int [STUDENT_COUNT];
		double [] avgs = new double [STUDENT_COUNT];
		
		Scanner sc = new Scanner(System.in);
		int count = 0;
		char con = 'y';
		
		do {
			System.out.println("이름 국어 영어 수학 입력 ? ");
			name = sc.next();
			kor = sc.nextInt();
			eng = sc.nextInt();
			mat = sc.nextInt();
			tot = kor+eng+mat;
			avg = (double)tot/3;
			rank=1;
			
			names[count]=name;
			kors[count]=kor;
			engs[count]=eng;
			mats[count]=mat;
			tots[count]=tot;
			avgs[count]=avg;
			ranks[count]=rank;
			
			count++;
			
			System.out.println("입력을 계속하시겠습니까?");
			con = (char)System.in.read();
			System.in.skip(System.in.available());
			
			
			
		} while (Character.toUpperCase(con)=='Y');
		
		
		eatRank(tots,ranks,count);
		viewSudentsInfo(names, kors, engs, mats, tots, avgs, ranks, count);


	}//m

	private static void viewSudentsInfo(String[] names, int[] kors, int[] engs, int[] mats, int[] tots, double[] avgs,
		int[] ranks, int count) {
		System.out.printf("총%d명\n", count);
		for (int i = 0; i < count; i++) {
			System.out.printf("%d번 %s %d %d %d %d %.2f %d등\n",i+1, names[i], kors[i], engs[i], mats[i], tots[i]
					, avgs[i], ranks[i]);
			
		}

	
}

	private static void eatRank(int[] tots, int[] ranks, int count) {
		for (int i = 0; i < count; i++) {
			ranks[i] = 1;
			for (int j = 0; j < count; j++) {
				if( tots[i] < tots[j] ) ranks[i]++;
			}
			
			
		}
		
	}



} // class




