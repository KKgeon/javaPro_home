package javaPro;

import java.util.Scanner;

public class Sample4 {
	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		
		int [] n = new int [3];
		appendArray(n);
		System.out.printf("n[%d]", n);
		dispArray();

	}//m

	private static void dispArray() {
		System.out.println();
	}

	private static void appendArray(int [] n) {
		int index = 0;
		Scanner sc = new Scanner(System.in);
		int m = sc.nextInt();
		
		do {
			addArr();
		} while (n.length == index);
		n[index++] = m;
		
		
		
		
	}

	private static void addArr() {
		
	}

}//c
